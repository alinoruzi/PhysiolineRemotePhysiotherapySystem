@model List<Physioline.WebApp.Areas.Administration.Models.CategoryItemViewModel>
@{
    ViewData["Title"] = "دسته بندی تمرینات";
}
<div class="d-flex mt-5 col-12" >
    <div class="col-12">
        <div class="d-flex justify-content-between">
            <div>
                <h1 class="h1">فهرست دسته بندی ها</h1>
            </div>
            <div>
                <a asp-controller="Category" asp-action="Add">
                <button class="btn btn-success btn-lg"><i class="fa-solid fa-plus"></i> افزودن دسته بندی</button>
                </a>
            </div>
        </div>
        <hr/>
        <table class="table table-striped table-active mt-3">
            <thead>
                <tr>
                    <th>#</th>
                    <th>عنوان</th>
                    <th>توضیحات</th>
                    <th>دسته والد</th>
                    <th>تاریخ ایجاد</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>
                        @if (item.Parent != null)
                        {
                            <a asp-controller="Category" asp-action="Edit" asp-route="@item.Parent.Id">
                                @item.Parent.Title
                            </a>
                        }
                        else
                        {
                            <span>ندارد</span>
                        }
                    </td>
                    
                    <td>@item.CreatedAt</td>
                    <td>
                        <div class="d-flex justify-content-center gap-1">
                            <div>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-bookId="@item.Id">
                                    <button class="btn btn-danger btn-sm"><i class="fa-solid fa-trash"></i></button>
                                </a>
                            </div>
                            <div>
                                    <a asp-controller="Category" asp-action="Edit" asp-route-bookId="@item.Id">
                                    <button class="btn btn-warning btn-sm"><i class="fa-solid fa-pencil"></i></button>
                                </a>
                            </div>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>